<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="8dp" />
                    <solid
                        android:color="#FFFFFF" />
                    <size
                        android:width="260dp"
                        android:height="48dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#D1D1D1" />
                </shape>
            </item>
            <item
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp">
                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@drawable/ic_dropdown" />
            </item>
        </layer-list>
    </item>
</selector>